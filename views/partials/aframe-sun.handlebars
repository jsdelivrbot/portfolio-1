<a-scene class="aframe sun" embedded vr-mode-ui="enabled: false"
  fog="type: linear; color: #8ab0c6">

  <a-assets>
    <a-asset-item id="terrain1" src="../obj/sun/terrain1.obj"></a-asset-item>
    <a-asset-item id="terrain2-1" src="../obj/sun/terrain2-1.obj"></a-asset-item>
    <a-asset-item id="terrain2-2" src="../obj/sun/terrain2-2.obj"></a-asset-item>
    <a-asset-item id="terrain3" src="../obj/sun/terrain3.obj"></a-asset-item>
    <a-asset-item id="sun" src="../obj/sun/sun.obj"></a-asset-item>

  </a-assets>

  <a-entity obj-model="obj: #terrain1" position="3.40 -1 -5.25" rotation="-5.06 0 0"></a-entity>
  <a-entity obj-model="obj: #terrain2-1" position="2.00 -1 -5.00" scale="3 1 3"></a-entity>
  <a-entity obj-model="obj: #terrain2-2" position="-2.00 -3 -7.00" scale="2 2 2"></a-entity>
  <a-entity obj-model="obj: #terrain3" position="0 -2 -10" scale="4 4 3"></a-entity>

  <a-entity light="type: point; color: #cdebeb; intensity: 2; distance: 50;"  position="-20 10 20"></a-entity>
  <a-light type="ambient" color="#f6e799" intensity=".1"></a-light>
  <a-entity camera position="0 0 0">
    <a-animation attribute="position" to="3 0 0" from="0 0 0" dur="100000" easing="linear" repeat="indefinite" direction="alternate"></a-animation></a-entity>
  <a-gradient-sky material="shader: gradient; topColor: 17, 32, 70; bottomColor: 187, 46, 67;"></a-gradient-sky>

</a-scene>
